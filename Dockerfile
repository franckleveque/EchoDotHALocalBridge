# Build stage
FROM golang:1.24-alpine AS builder

RUN apk add --no-cache ca-certificates

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-w -s" -o bridge ./cmd/bridge

# Final stage
FROM scratch

COPY --from=builder /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/
COPY --from=builder /app/bridge /bridge

# Hue V1 discovery and API rely on port 80
EXPOSE 80
# SSDP discovery
EXPOSE 1900/udp

ENTRYPOINT ["/bridge"]
